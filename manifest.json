{
  "manifest_version": 2,

  "name": "ESL Twitch Streams",
  "description": "Showing you a list of your favorite Twitch streamers currently streaming.",
  "version": "1.0",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Check what's live!"
  },
  "icons": { "16": "assets/icon16.png",
           "48": "assets/icon48.png",
          "128": "assets/icon128.png" },
  "content_security_policy":
    "script-src 'self' https://wind-bow.glitch.me https://wind-bow.hyperdev.space; object-src 'self'",
  "content_scripts": [ {
    "js": [ "jquery.min.js", "build/js/index.js" ],
    "matches": [ "http://*/*", "https://*/*"]
  }],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}